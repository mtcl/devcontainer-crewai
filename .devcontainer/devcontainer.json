{
    "name": "Python Development Environment",
    "build": {
      "dockerfile": "Dockerfile",
      "context": "../",
      "args": {
        "PYTHON_ENV": "my_python_dev"
      }
    },
    "runArgs": ["--network=host"],
    "customizations": {
      "vscode": {
        "settings": {
          "python.defaultInterpreterCommand": ["poetry", "shell", "-c", "python3"]
        },
        "extensions": [
          "ms-python.python",
          "ms-toolsai.jupyter"
        ]
      }
    }
  }